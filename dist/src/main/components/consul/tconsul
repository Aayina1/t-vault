#!/bin/bash
#
# tconsul        Manage the consul agent
#
# chkconfig:   2345 91 10
# description: Consul is a tool for service discovery and configuration
# processname: consul
# config: /opt/tvault/consul/client/config.json
# pidfile: /opt/tvault/consul/consul.pid

